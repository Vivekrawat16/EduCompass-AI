# ======================
# SERVER CONFIGURATION
# ======================
PORT=5000
NODE_ENV=production

# ======================
# DATABASE (AWS RDS or Local PostgreSQL)
# ======================
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=educompass_db
DATABASE_URL=postgresql://postgres:password@localhost:5432/educompass_db

# ======================
# JWT & SESSION
# ======================
JWT_SECRET=your_super_secret_jwt_key_change_this
SESSION_SECRET=your_super_secret_session_key_change_this

# ======================
# AWS DEPLOYMENT URLs
# ======================
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ======================
# GOOGLE OAUTH (AWS Production)
# ======================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://api.yourdomain.com/api/auth/google/callback

# ======================
# AI API KEYS
# ======================
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key
